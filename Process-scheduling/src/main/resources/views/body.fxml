<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.scene.control.ToggleGroup?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox>
            <HBox prefHeight="10.0" spacing="20" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <HBox>
                    <Label>进程总数：</Label>
                    <Text fx:id="numOfProcesses">0</Text>
                </HBox>
                <HBox>
                    <Label>阻塞进程数：</Label>
                    <Text fx:id="numOfWait">0</Text>
                </HBox>
                <HBox>
                    <Label>已完成进程数：</Label>
                    <Text fx:id="numOfEnd">0</Text>
                </HBox>
                <HBox>
                    <Label>时间：</Label>
                    <Text fx:id="time">0</Text>
                </HBox>
            </HBox>
            <HBox prefHeight="10.0" spacing="20" alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0" right="10.0" bottom="20.0"/>
                </padding>
                <Label>类型</Label>
                <JFXRadioButton fx:id="fcfs" selected="true" text="先来先服务">
                    <toggleGroup>
                        <ToggleGroup fx:id="typeGroup"/>
                    </toggleGroup>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXRadioButton>
                <JFXRadioButton fx:id="rr" text="最短剩余时间优先" toggleGroup="$typeGroup">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXRadioButton>
                <JFXRadioButton fx:id="srtf" text="最短剩余时间优先" toggleGroup="$typeGroup">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXRadioButton>
                <JFXRadioButton fx:id="spf" text="最短进程优先" toggleGroup="$typeGroup">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXRadioButton>
                <JFXRadioButton fx:id="psa" text="优先级" toggleGroup="$typeGroup">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </JFXRadioButton>
            </HBox>
            <HBox prefHeight="10.0" spacing="20" alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0" right="10.0" bottom="20.0"/>
                </padding>
                <Button fx:id="start">开始</Button>
                <Button fx:id="insert">插入进程</Button>
                <Button fx:id="stop">停止</Button>
                <Button fx:id="goON">继续</Button>
                <Button fx:id="reset">重置</Button>
            </HBox>
        </VBox>
    </top>
    <center>
        <HBox spacing="30">
            <padding>
                <Insets left="10.0" right="10.0"/>
            </padding>
            <VBox fx:id="list1" spacing="5" alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </VBox>
            <VBox fx:id="list2" spacing="5" alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </VBox>
            <VBox fx:id="list3" spacing="5" alignment="CENTER_LEFT">
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </VBox>
        </HBox>

    </center>

</BorderPane>
